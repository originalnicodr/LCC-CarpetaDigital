#reader(lib "htdp-beginner-reader.ss" "lang")((modname ej2) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f ())))
(define (pitagorica? a b c) (if (equal? (if (and (> a b) (> a c)) (= (sqr a) (+ (sqr b) (sqr c))) (if (and (> b a) (> b c)) (= (sqr b) (+ (sqr a) (sqr c))) (if (and (> c a) (> c b)) (= (sqr c) (+ (sqr b) (sqr a))) #false))) #true) (string-append "Los números " (number->string a) ", " (number->string b) "y " (number->string c) " forman una terna pitagórica") (string-append "Los números " (number->string a) ", " (number->string b) "y " (number->string c) " NO forman una terna pitagórica")))
(pitagorica? 3 4 5)

;Funciona solo con numeros enteros